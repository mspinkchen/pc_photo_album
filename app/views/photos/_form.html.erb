
<% if @photo.errors.present? %>
<ul>
  <% @photo.errors.each do |error, message| %>
  <li><%= "#{error.capitalize} #{message}" %></li>
  <% end %>
</ul>
<% end %>



<div class="form container">
  <%= form_for @photo do |f| %>
<div class = "form-group">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title, class: "form-control" %>
</div>

<div class = "form-group">
  <%= f.label :date, "Date" %>
  <%= f.text_field :date, class: "form-control" %>
</div>

<div class = "form-group">
  <%= f.label :description, "Description" %>
  <%= f.text_area :description, class: "form-control" %>
</div>

<div calss = "form-group">
   <%= f.label :file_location, "File_location" %>
   <%= f.file_field :file_location %>
</div>
<br>
<div class="mybtn">
  <%= f.submit button, class: "btn btn-info" %>
</div>

<div class="mybtn">
  <%= link_to 'Back', photos_path, class: "btn btn-info"%>
</div>

<% end %>
</div>
